<h1>Editing Book</h1>

<%= form_with model: @books, url: book_path(@books.id), method: :patch do |f| %>

<% if @books.errors.any? %>
  <%= @books.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>



<%= link_to "Show",book_path(@books) %> |
